<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/style.css">
    <title>NodeJS</title>
</head>

<body>
    <div class="topnav">
        <a class="active" href="#home">Home</a>
        <a href="#news">News</a>
        <a href="#contact">Contact</a>
        <a href="#about">About</a>
    </div>
    <h1>List USers</h1>
    <table>
        <tr>
            <th>id</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>adress</th>
            <th>email</th>
        </tr>
        <% for(let i=0; i < dataUser.length;i++) { %>
            <tr>
                <td>
                    <%= dataUser[i].id %>
                </td>
                <td>
                    <%= dataUser[i].firstName %>
                </td>
                <td>
                    <%= dataUser[i].lastName %>
                </td>
                <td>
                    <%= dataUser[i].address %>
                </td>
                <td>
                    <%= dataUser[i].email %>
                </td>
                <td>
                    <a href="detail/user/<%= dataUser[i].id %>">Detail</a>
                </td>
            </tr>
            <% } %>
    </table>

</body>

</html>